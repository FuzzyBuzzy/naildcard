{
  "manifest_version": 3,
  "name": "Naildcard",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "128": "icon.png"
    }
  },
  "content_scripts": [{
    "run_at": "document_end",
    "matches": ["https://novelai.net/*"],
    "js": ["content.js", "scripts.js"]
  }]
}
